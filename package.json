{
  "name": "i18n-string-templates",
  "version": "0.0.0-dev",
  "description": "Simple i18n handler using string templates and JSON.",
  "main": "src/index.js",
  "scripts": {
    "build:types": "tsc -p tsconfig.declaration.json",
    "coverage": "npm test && c8 report --reporter=text-lcov | coveralls",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prepublishOnly": "npm run build:types; npm_config_yes=true npx clean-package",
    "test": "c8 mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TobiTenno/i18n-string-templates.git"
  },
  "keywords": [
    "template",
    "i18n"
  ],
  "author": "TobiTenno <tobiah@pm.me>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/TobiTenno/i18n-string-templates/issues"
  },
  "homepage": "https://github.com/TobiTenno/i18n-string-templates#readme",
  "eslintIgnore": [],
  "eslintConfig": {
    "extends": "airbnb-base",
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "sourceType": "module",
      "babelOptions": {
        "plugins": [
          "@babel/plugin-proposal-class-properties",
          "@babel/plugin-proposal-private-methods"
        ]
      }
    },
    "rules": {
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false,
          "requireReturnDescription": false,
          "preferType": {
            "String": "string",
            "Number": "number",
            "Boolean": "boolean",
            "Function": "function",
            "object": "Object",
            "date": "Date",
            "error": "Error"
          },
          "prefer": {
            "return": "returns"
          }
        }
      ],
      "strict": [
        "error",
        "safe"
      ],
      "linebreak-style": "off",
      "no-restricted-syntax": [
        "off"
      ],
      "no-await-in-loop": "off",
      "import/no-unresolved": 0,
      "no-useless-escape": 0,
      "func-names": 0,
      "arrow-parens": [
        2,
        "as-needed",
        {
          "requireForBlockBody": true
        }
      ],
      "global-require": 0,
      "no-param-reassign": "off",
      "no-continue": "off",
      "lines-between-class-members": "off",
      "no-fallthrough": "off",
      "no-case-declarations": "off",
      "default-case": "off",
      "max-classes-per-file": "off"
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-private-methods"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.15.7",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-private-methods": "^7.14.5",
    "@babel/preset-env": "^7.15.6",
    "c8": "^8.0.0",
    "chai": "^4.3.4",
    "coveralls": "^3.1.1",
    "eslint": "^8.0.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.24.2",
    "mocha": "^10.0.0",
    "typescript": "^5.0.2"
  },
  "mocha": {
    "exit": true,
    "spec": "src/test/**/*.spec.js"
  },
  "c8": {
    "reporter": [
      "lcov",
      "text"
    ],
    "include": [
      "src/index.js"
    ],
    "all": true
  },
  "release": {
    "branch": "main"
  },
  "engines": {
    "node": ">=14.18.0"
  },
  "type": "module",
  "clean-package": {
    "remove": [
      "release", "c8", "mocha", "devDependencies", "eslintIgnore", "eslintConfig", "babel", "scripts", "clean-package"
    ]
  }
}
